        hyper_right {
            bindings = <&hold_or_kp LS(LA(LC(LEFT_COMMAND))) ESCAPE>;
            key-positions = <39 40>;
        };

        right_delete {
            bindings = <&kp DELETE>;
            key-positions = <40 41>;
