            key-positions = <7 6>;
        };

        select_all {
            bindings = <&kp LG(A)>;
            key-positions = <31 30>;
        };

        hyper_t {
            bindings = <&kp LS(LA(LC(LG(T))))>;
            key-positions = <37 16>;
        };

